<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="two.example.shen.yue.espressoprojectone.activity.Activity13">

    <Button
        android:id="@+id/btn_activity12_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button1" />

    <Button
        android:id="@+id/btn_activity12_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button2"
        app:layout_constraintLeft_toRightOf="@id/btn_activity12_1"
        app:layout_constraintTop_toTopOf="@id/btn_activity12_1" />

    <Button
        android:id="@+id/btn_activity12_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button3"
        app:layout_constraintLeft_toRightOf="@id/btn_activity12_2"
        app:layout_constraintTop_toTopOf="@id/btn_activity12_2" />

    <Button
        android:id="@+id/btn_activity12_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button4"
        app:layout_constraintLeft_toRightOf="@id/btn_activity12_3"
        app:layout_constraintTop_toTopOf="@id/btn_activity12_3" />

    <!--<ListView-->
    <two.example.shen.yue.espressoprojectone.view.Activity13ListView
        android:id="@+id/lv_activity12"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_activity12_1" />

</android.support.constraint.ConstraintLayout>
